{
  "compilerOptions": {
    "target": "ESNext",                // Change from "es5" to "ESNext"
    "module": "ESNext",                // Set module to "ESNext" for import.meta support
    "lib": ["dom", "es2015", "esnext"],  // Add "esnext" to include the latest JavaScript features
    "jsx": "react-jsx",                // Ensure JSX is supported for React
    "moduleResolution": "node",        // Ensure module resolution works as expected
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
